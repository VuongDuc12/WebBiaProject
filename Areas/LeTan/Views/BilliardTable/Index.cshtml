@model List<WebBiaProject.Models.BilliardTable>
@{
    ViewData["Title"] = "Danh sách bàn bia chi nhánh";
    Layout = "~/Areas/LeTan/Views/Shared/_LayoutLeTan.cshtml";
}

<style>
    .table-card {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 15px;
        text-align: center;
        height: 120px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin-bottom: 20px;
    }
    .table-card.available { background-color: #d4edda; } /* Màu xanh nhạt cho bàn trống */
    .table-card.occupied { background-color: #f8d7da; } /* Màu đỏ nhạt cho bàn đang sử dụng */
    .table-card.reserved { background-color: #fff3cd; } /* Màu vàng nhạt cho bàn đã đặt */
    .table-card h5 { margin: 0; font-size: 1.2rem; }
    .table-card p { margin: 5px 0 0; font-size: 0.9rem; }
</style>

<div class="container my-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Danh sách bàn bia</h2>
        <div>
            <!-- Có thể thêm nút tạo bàn nếu cần -->
            <a class="btn btn-primary p-2" href="@Url.Action("Create", "BilliardTable")">+ Thêm bàn bia</a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var table in Model)
            {
                <div class="col-md-3">
                    <div class="table-card @(table.Status)">
                        <h5>@table.TableNumber</h5>
                        <p>Trạng thái: @(table.Status )</p>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">Không có bàn bia nào để hiển thị.</div>
    }
</div>