@model List<WebBiaProject.Models.Branch>
@{
    ViewData["Title"] = "Danh sách chi nhánh";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .btn-sm {
        padding: 5px;
    }
    .fas {
        font-size: 14px;
    }
    .action-btn {
        margin-right: 5px;
    }
    .badge-custom {
        font-size: 0.9rem;
        padding: 0.5em 1em;
    }
</style>

<div class="container my-3">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Danh sách chi nhánh</h2>
        <div>
            <a class="btn btn-primary p-2" href="@Url.Action("Create", "Branch")">+ Thêm chi nhánh</a>
        </div>
    </div>

    <!-- Search -->
    <div class="row mb-3">
        <div class="col-md-6">
            <input type="text" class="form-control" placeholder="Tìm kiếm theo tên chi nhánh hoặc địa chỉ">
        </div>
    </div>

    <!-- Table -->
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col"><input type="checkbox"></th>
                        <th scope="col">Mã chi nhánh</th>
                        <th scope="col">Tên chi nhánh</th>
                        <th scope="col">Địa chỉ</th>
                        <th scope="col">Số điện thoại</th>
                        <th scope="col">Trạng thái</th>
                        <th scope="col">Ngày tạo</th>
                        <th scope="col">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var branch in Model)
                    {
                        <tr>
                            <td><input type="checkbox"></td>
                            <td>@branch.Id</td>
                            <td>@branch.Name</td>
                            <td>@branch.Address</td>
                            <td>@branch.Phone</td>
                            <td>
                                @if (branch.Status == "Hoạt Động")
                                {
                                    <span class="badge badge-custom bg-success">Hoạt động</span>
                                }
                                else if (branch.Status == "Bảo Trì")
                                {
                                    <span class="badge badge-custom bg-danger">Ngừng hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge badge-custom bg-secondary">@branch.Status</span>
                                }
                            </td>
                            <td>@branch.CreatedDate?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <a href="@Url.Action("Edit", "Branch", new { id = branch.Id })"
                                   class="btn btn-sm btn-primary action-btn"
                                   title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button class="btn btn-sm btn-danger action-btn delete-btn"
                                        data-id="@branch.Id"
                                        title="Xóa">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Không có chi nhánh nào để hiển thị.
        </div>
    }

    <!-- Pagination -->
    <div class="d-flex justify-content-between align-items-center mt-3">
        <span class="text-muted">Hiển thị từ 1 đến @Model.Count trên tổng số @Model.Count chi nhánh</span>
        <nav aria-label="Page navigation">
            <ul class="pagination mb-0">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Trước</a>
                </li>
                <li class="page-item active" aria-current="page">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">Tiếp</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.delete-btn').click(function() {
                var id = $(this).data('id');
                if (confirm('Bạn có chắc chắn muốn xóa chi nhánh #' + id + ' không?')) {
                    $.ajax({
                        url: '@Url.Action("Delete", "Branch")',
                        type: 'POST',
                        data: { id: id },
                        success: function(result) {
                            if (result.success) {
                                location.reload();
                            } else {
                                alert('Xóa không thành công: ' + result.message);
                            }
                        },
                        error: function() {
                            alert('Đã xảy ra lỗi khi xóa chi nhánh');
                        }
                    });
                }
            });
        });
    </script>
}