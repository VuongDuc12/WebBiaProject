@model WebBiaProject.Models.Employee
@{
    ViewData["Title"] = "Thêm nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container my-3">
    <h2>Thêm nhân viên mới</h2>
    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label asp-for="Name">Tên nhân viên</label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    
        <div class="form-group mb-3">
            <label asp-for="Phone">Số điện thoại</label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Address">Địa chỉ</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Salary">Lương</label>
            <input asp-for="Salary" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <select asp-for="BranchId" class="form-control">
            <option value="">Chọn chi nhánh</option>
            @if (ViewBag.Branches != null)
            {
                @foreach (var branch in ViewBag.Branches as List<WebBiaProject.Models.Branch>)
                {
                    <option value="@branch.Id">@branch.Name</option>
                }
            }
        </select>
        <select asp-for="RoleId" class="form-control" required>
            <option value="">Chọn vai trò</option>
            @if (ViewBag.Roles != null)
            {
                @foreach (var role in ViewBag.Roles as List<WebBiaProject.Models.EmployeeRole>)
                {
                    <option value="@role.Id">@role.Name</option>
                }
            }
        </select>
        <button type="submit" class="btn btn-primary">Thêm nhân viên</button>
        <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary">Quay lại</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}