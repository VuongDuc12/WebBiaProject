@model WebBiaProject.Models.Employee
@{
    ViewData["Title"] = "Thêm nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container my-3">
    <h2>Thêm nhân viên mới</h2>
    <form method="post" asp-action="Create" asp-controller="Employee" asp-area="Admin">
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            <label class="form-label">Tên nhân viên</label>
            <input name="Name" class="form-control" value="" />
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Email</label>
            <input name="Email" class="form-control" value="" />
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Số điện thoại</label>
            <input name="Phone" class="form-control" value="" />
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Địa chỉ</label>
            <input name="Address" class="form-control" value="" />
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Lương</label>
            <input name="Salary" class="form-control" type="number" step="0.01" value="" />
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Chi nhánh</label>
            <select name="BranchId" class="form-control">
                <option value="">Chọn chi nhánh</option>
                @if (ViewBag.Branches != null)
                {
                    @foreach (var branch in ViewBag.Branches as List<WebBiaProject.Models.Branch>)
                    {
                        <option value="@branch.Id">@branch.Name</option>
                    }
                }
            </select>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Vai trò</label>
            <select name="RoleId" class="form-control">
                <option value="">Chọn vai trò</option>
                @if (ViewBag.Roles != null)
                {
                    @foreach (var role in ViewBag.Roles as List<WebBiaProject.Models.EmployeeRole>)
                    {
                        <option value="@role.Id">@role.Name</option>
                    }
                }
            </select>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Thêm nhân viên</button>
            <a href="@Url.Action("Index", "Employee", new { area = "Admin" })" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>