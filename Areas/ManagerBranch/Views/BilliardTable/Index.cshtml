@model List<WebBiaProject.Models.BilliardTable>
@{
    ViewData["Title"] = "Danh sách bàn bia chi nhánh";
    Layout = "~/Areas/ManagerBranch/Views/Shared/_LayoutManagerBranch.cshtml";
}

<style>
    .table-card {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 15px;
        text-align: center;
        height: 120px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin-bottom: 20px;
        transition: transform 0.2s, box-shadow 0.2s;
        cursor: pointer;
    }

        .table-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table-card.available {
            background-color: #d4edda; /* Màu xanh nhạt cho bàn trống */
        }

        .table-card.occupied {
            background-color: #f8d7da; /* Màu đỏ nhạt cho bàn đang sử dụng */
        }

        .table-card.reserved {
            background-color: #fff3cd; /* Màu vàng nhạt cho bàn đã đặt */
        }

        .table-card h5 {
            margin: 0;
            font-size: 1.2rem;
        }

        .table-card p {
            margin: 5px 0 0;
            font-size: 0.9rem;
        }

        .table-card a {
            text-decoration: none;
            color: inherit;
        }
</style>

<div class="container my-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Danh sách bàn bia</h2>
        <div>
            <a class="btn btn-primary p-2" href="@Url.Action("Create", "BilliardTable")">+ Thêm bàn bia</a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var table in Model)
            {
                string statusName = table.Status?.Name?.ToLower() ?? "unknown";
                string statusClass = statusName switch
                {
                    "sẵn sàng" => "available",
                    "đang chơi" => "occupied",
                    "đã đặt bàn" => "reserved",
                    _ => "unknown"
                };

                string displayStatus = statusName switch
                {
                    "sẵn sàng" => "Trống",
                    "đang chơi" => "Đang sử dụng",
                    "đã đặt bàn" => "Đã đặt",
                    _ => table.Status?.Name ?? "Không xác định"
                };

                // Xác định hành vi khi nhấp
                string action = statusName == "sẵn sàng"
                ? $"showStartModal({table.Id}, '{table.Name} #{table.TableNumber}')"
                : $"window.location.href='{Url.Action("ViewBill", "BilliardTable", new { id = table.Id })}'";

                <div class="col-md-3">
                    <div class="table-card @statusClass" onclick="@action">
                        <h5>@table.Name #@table.TableNumber</h5>
                        <p>Trạng thái: @displayStatus</p>
                        <p>Giá mỗi giờ: @table.HourlyRate.ToString("N2") VND</p>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">Không có bàn bia nào để hiển thị.</div>
    }

    <!-- Modal bật bàn -->
    <div class="modal fade" id="startTableModal" tabindex="-1" aria-labelledby="startTableModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="startTableModalLabel">Bật bàn bia</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="modalMessage"></p>
                </div>
                <div class="modal-footer">
                    <form asp-action="StartTable" method="post" id="startTableForm">
                        <input type="hidden" name="id" id="tableId" />
                        <button type="submit" class="btn btn-primary">Bật bàn</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function showStartModal(tableId, tableName) {
        document.getElementById('modalMessage').innerText = `Bàn ${tableName} hiện đang trống. Bạn có muốn bật bàn không?`;
        document.getElementById('tableId').value = tableId;
        var modal = new bootstrap.Modal(document.getElementById('startTableModal'));
        modal.show();
    }
</script>