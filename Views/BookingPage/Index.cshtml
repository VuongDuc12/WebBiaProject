@model List<WebBiaProject.Models.BilliardTable>

@foreach (var table in Model)
{
    <div class="container-fluid courses overflow-hidden py-5">
        <div class="container py-5">
            <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
                <h4 class="text-primary">Peri Pool Areas</h4>
                <h1 class="display-4 text-white mb-4">@table.Name - @table.Branch.Name</h1>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="card p-4 shadow">
                        <h2 class="text-center mb-4">Book @table.Name</h2>
                        <form asp-controller="BookingPage" asp-action="BookTable" method="post">
                            @Html.AntiForgeryToken()
                            <!-- Hidden fields -->
                            <input type="hidden" name="TableId" value="@table.Id" />
                            <input type="hidden" name="BranchId" value="@table.Branch.Id" />
                            <input type="hidden" name="CustomerId" value="@ViewBag.CurrentCustomerId" />

                            <!-- Booking DateTime -->
                            <div class="mb-3">
                                <label class="form-label">Booking Date & Time *</label>
                                <input type="datetime-local" class="form-control" name="StartTime"
                                       value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")"
                                       min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required>
                            </div>

                            <!-- Phone Number for Confirmation -->
                            <div class="mb-4">
                                <label class="form-label">Phone Number *</label>
                                <input type="tel" class="form-control" name="PhoneNumber"
                                       pattern="[0-9]{10}" placeholder="Enter 10-digit phone number"
                                       title="Please enter a valid 10-digit phone number" required>
                            </div>

                            <!-- Submit Button -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Confirm Booking</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



}

<!-- Courses End -->
